{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es5", "es6", "dom", "dom.iterable"
        ],
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "typeRoots": [
        "@types",
        "./node_modules/@types",
      ],
    "include": [
        "src/*", 
        "@types"    
    ]
}